<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Watchify.Views.SearchPage"
             Title="SearchPage">

    <Grid BackgroundColor="#69232A">
        <!-- Adding radial gradient -->
        <Grid.Background>
            <RadialGradientBrush Radius="1.5">
                <GradientStop Color="#551024" Offset="0.01" />
                <GradientStop Color="#2C070C" Offset="1.0" />
            </RadialGradientBrush>
        </Grid.Background>

        <Button Text="Click Me"
        TextColor="White"
        HorizontalOptions="Center"
        VerticalOptions="Center">
            
        </Button>


        <StackLayout Padding="10" BackgroundColor="#632222" >

        <!-- Search Bar Section -->
        <StackLayout Orientation="Horizontal" VerticalOptions="Start" Margin="0,20,0,10">
            <Entry Placeholder="Search" 
                   TextColor="White" 
                   FontSize="18" 
                   PlaceholderColor="LightGray" 
                   BackgroundColor="Transparent" 
                   HorizontalOptions="FillAndExpand"/>
            <ImageButton Source="search_icon.png" 
                         HeightRequest="30" 
                         WidthRequest="30" 
                         BackgroundColor="Transparent"
                         VerticalOptions="Center" 
                         HorizontalOptions="End"/>
        </StackLayout>

        <!-- Browse By Section -->
        <Label Text="BROWSE BY" 
               FontSize="18" 
               FontAttributes="Bold" 
               TextColor="White" 
               Margin="0,10,0,10"
               FontFamily="SuseBold"/>

        <Grid ColumnSpacing="10" RowSpacing="10" Margin="0,10,0,10">
            <!-- Row 1 -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Column Definitions -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Browse Buttons -->
            <Button Text="Genres" 
                    BackgroundColor="#444444" 
                    TextColor="White" 
                    FontAttributes="Bold"
                    Grid.Row="0" Grid.Column="0"
                    CornerRadius="15" HeightRequest="50"
                    Opacity="0.8"/>
            <Button Text="Rating" 
                    BackgroundColor="#444444" 
                    TextColor="White" 
                    FontAttributes="Bold"
                    Grid.Row="0" Grid.Column="1"
                    CornerRadius="15" HeightRequest="50"/>
            <Button Text="Country" 
                    BackgroundColor="#444444" 
                    TextColor="White" 
                    FontAttributes="Bold"
                    Grid.Row="0" Grid.Column="2"
                    CornerRadius="15" HeightRequest="50"/>

            <Button Text="Popular" 
                    BackgroundColor="#444444" 
                    TextColor="White" 
                    FontAttributes="Bold"
                    Grid.Row="1" Grid.Column="0"
                    CornerRadius="15" HeightRequest="50"/>
            <Button Text="Years" 
                    BackgroundColor="#444444" 
                    TextColor="White" 
                    FontAttributes="Bold"
                    Grid.Row="1" Grid.Column="1"
                    CornerRadius="15" HeightRequest="50"/>
            <Button Text="Actors" 
                    BackgroundColor="#444444" 
                    TextColor="White" 
                    FontAttributes="Bold"
                    Grid.Row="1" Grid.Column="2"
                    CornerRadius="15" HeightRequest="50"/>
        </Grid>

        <!-- Text Sections -->
        <StackLayout Margin="0,30,0,0">
            <Label Text="MOST ANTICIPATED" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   Margin="0,10,0,0"/>
            <Label Text="NEW RELEASES" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   Margin="0,20,0,0"/>
            <Label Text="JOURNAL" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   Margin="0,20,0,0"/>
        </StackLayout>

    </StackLayout>

    <!-- Bottom Navigation Bar -->
    <StackLayout Orientation="Horizontal" 
                 VerticalOptions="End" 
                 HorizontalOptions="FillAndExpand" 
                 HeightRequest="60" 
                 BackgroundColor="#522222">
        <ImageButton Source="home_icon.png" 
                     HorizontalOptions="CenterAndExpand" 
                     VerticalOptions="Center" 
                     HeightRequest="30" 
                     WidthRequest="30"/>
        <ImageButton Source="browse_icon.png" 
                     HorizontalOptions="CenterAndExpand" 
                     VerticalOptions="Center" 
                     HeightRequest="30" 
                     WidthRequest="30"/>
        <ImageButton Source="profile_icon.png" 
                     HorizontalOptions="CenterAndExpand" 
                     VerticalOptions="Center" 
                     HeightRequest="30" 
                     WidthRequest="30"/>
    </StackLayout>
        </Grid>
</ContentPage>