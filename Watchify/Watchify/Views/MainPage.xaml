<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Watchify.Views.MainPage"
             Title="MainPage">
    <Grid BackgroundColor="#69232A">
        <!-- Adding radial gradient -->
        <Grid.Background>
            <RadialGradientBrush Radius="1.5">
                <GradientStop Color="#551024" Offset="0.01" />
                <GradientStop Color="#2C070C" Offset="1.0" />
            </RadialGradientBrush>
        </Grid.Background>

        <StackLayout BackgroundColor="AntiqueWhite" Grid.Row="0" Padding="15" VerticalOptions="End" HorizontalOptions="Center">
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Source="home.png" WidthRequest="40" HeightRequest="40"/>
                <Image Grid.Column="1" Source="home.png" WidthRequest="40" HeightRequest="40"/>
                <Image Grid.Column="2" Source="home.png" WidthRequest="40" HeightRequest="40"/>
            </Grid>
        </StackLayout>

    </Grid>
</ContentPage>