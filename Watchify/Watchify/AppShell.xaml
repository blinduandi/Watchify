<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Watchify.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:signup="clr-namespace:Watchify.Pages"
    xmlns:local="clr-namespace:Watchify"
    xmlns:views="clr-namespace:Watchify.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="false">
    
    <ShellContent
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate signup:SignUpView}"
        Route="SignUp" />


</Shell>
