<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Watchify.Pages.SignUpView"
             xmlns:link="clr-namespace:Watchify.Shared.Link"
             xmlns:signupfeature="clr-namespace:Watchify.Features.SignUp"
             Title="SignUpView">
    <ScrollView>
        <VerticalStackLayout Padding="25" MaximumWidthRequest="800">
            <Label FontSize="Large" Text="Sign Up" />
            <signupfeature:SignUpFormView BindingContext="{Binding SignUpFormViewModel}" />
            <link:Link Route="//SignIn" Text="Have an account? Sign in" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>